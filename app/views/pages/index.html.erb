<h1>Listing pages</h1>

<table>
  <tr>
    <th>Pag title</th>
    <th>Pag body text</th>
    <th>Pag slug</th>
    <th>Pag menu</th>
    <th>Pag menu position</th>
    <th>Pag target url</th>
    <th>Pag location</th>
    <th>Pag public</th>
    <th>Org</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.body_text %></td>
    <td><%= page.slug %></td>
    <td><%= page.menu %></td>
    <td><%= page.menu_position %></td>
    <td><%= page.target_url %></td>
    <td><%= page.location %></td>
    <td><%= page.public %></td>
    <td><%= page.organisation_id %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

